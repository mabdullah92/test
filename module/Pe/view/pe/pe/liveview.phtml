                                // align: 'right', // by default
                                // verticalAlign: 'top', // by default
                                x: -60,
                                y: 5
                            },
                            relativeTo: 'chart'
                        },
                        backgroundColor: {
                            linearGradient: [0, 0, 500, 500],
                            stops: [
                                [0, 'rgb(255, 250, 250)'],
                                [1, 'rgb(255, 255, 200)']
                            ]
                        },
                        shadow: true,
                        renderTo: 'chartdiv',
                        zoomType: 'x',
                        panning: true,
                        panKey: 'shift',
                        defaultSeriesType: 'spline',
                        events: {
                            load: requestData
                        }
                    },

                    title: {
                        text: 'Live Data'
                    },
                    xAxis: {
                        type: 'datetime',
                        maxZoom: 1200 * 1000,
